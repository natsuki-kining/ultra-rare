<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.UrDynamicDatasourceMapper">
    
    <resultMap type="UrDynamicDatasource" id="UrDynamicDatasourceResult">
        <result property="id"    column="id"    />
        <result property="datasourceName"    column="datasource_name"    />
        <result property="userName"    column="user_name"    />
        <result property="password"    column="password"    />
        <result property="url"    column="url"    />
        <result property="driverClassName"    column="driver_class_name"    />
        <result property="otherConfig"    column="other_config"    />
    </resultMap>

    <sql id="selectUrDynamicDatasourceVo">
        select id, datasource_name, user_name, password, url, driver_class_name, other_config from ur_dynamic_datasource
    </sql>

    <select id="selectUrDynamicDatasourceList" parameterType="UrDynamicDatasource" resultMap="UrDynamicDatasourceResult">
        <include refid="selectUrDynamicDatasourceVo"/>
        <where>  
            <if test="datasourceName != null  and datasourceName != ''"> and datasource_name like concat('%', #{datasourceName}, '%')</if>
            <if test="userName != null  and userName != ''"> and user_name like concat('%', #{userName}, '%')</if>
            <if test="password != null  and password != ''"> and password like concat('%', #{password}, '%')</if>
            <if test="url != null  and url != ''"> and url like concat('%', #{url}, '%')</if>
            <if test="driverClassName != null  and driverClassName != ''"> and driver_class_name like concat('%', #{driverClassName}, '%')</if>
        </where>
    </select>
    
    <select id="selectUrDynamicDatasourceById" parameterType="Long" resultMap="UrDynamicDatasourceResult">
        <include refid="selectUrDynamicDatasourceVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertUrDynamicDatasource" parameterType="UrDynamicDatasource" useGeneratedKeys="true" keyProperty="id">
        insert into ur_dynamic_datasource
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="datasourceName != null and datasourceName != ''">datasource_name,</if>
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="password != null and password != ''">password,</if>
            <if test="url != null and url != ''">url,</if>
            <if test="driverClassName != null and driverClassName != ''">driver_class_name,</if>
            <if test="otherConfig != null">other_config,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="datasourceName != null and datasourceName != ''">#{datasourceName},</if>
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="password != null and password != ''">#{password},</if>
            <if test="url != null and url != ''">#{url},</if>
            <if test="driverClassName != null and driverClassName != ''">#{driverClassName},</if>
            <if test="otherConfig != null">#{otherConfig},</if>
         </trim>
    </insert>

    <update id="updateUrDynamicDatasource" parameterType="UrDynamicDatasource">
        update ur_dynamic_datasource
        <trim prefix="SET" suffixOverrides=",">
            <if test="datasourceName != null and datasourceName != ''">datasource_name = #{datasourceName},</if>
            <if test="userName != null and userName != ''">user_name = #{userName},</if>
            <if test="password != null and password != ''">password = #{password},</if>
            <if test="url != null and url != ''">url = #{url},</if>
            <if test="driverClassName != null and driverClassName != ''">driver_class_name = #{driverClassName},</if>
            <if test="otherConfig != null">other_config = #{otherConfig},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUrDynamicDatasourceById" parameterType="Long">
        delete from ur_dynamic_datasource where id = #{id}
    </delete>

    <delete id="deleteUrDynamicDatasourceByIds" parameterType="String">
        delete from ur_dynamic_datasource where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>